<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/showNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/light_grey"
        android:elegantTextHeight="false"
        android:ems="10"
        android:gravity="right"
        android:inputType="textMultiLine"        android:text="0"
        android:textColor="@color/Number_color"
        android:textIsSelectable="false"
        android:maxLength="16"
        android:textSize="85dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btn_c"
                style="@style/BTN_defult"
                android:onClick="clearText"
                android:text="C" />


            <Button
                android:id="@+id/btn_plus_minus"
                style="@style/BTN_defult"
                android:onClick="setClickEvent"
                android:text="+/-" />


            <Button
                android:id="@+id/btn_percent_sign"
                style="@style/BTN_defult"
                android:onClick="percentageEvent"
                android:text="%" />


            <Button
                android:id="@+id/btn_divide"
                style="@style/BTN_defult_right"
                android:onClick="operarionevent"
                android:text="รท" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_7"
                style="@style/BTN_defult"
                android:onClick="setClickEvent"
                android:text="7" />


            <Button
                android:id="@+id/btn_8"
                style="@style/BTN_defult"
                android:onClick="setClickEvent"
                android:text="8" />


            <Button
                android:id="@+id/btn_9"
                style="@style/BTN_defult"
                android:onClick="setClickEvent"
                android:text="9" />


            <Button
                android:id="@+id/btn_x"
                style="@style/BTN_defult_right"
                android:onClick="operarionevent"
                android:text="ร" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_4"
                style="@style/BTN_defult"
                android:onClick="setClickEvent"
                android:text="4" />


            <Button
                android:id="@+id/btn_5"
                style="@style/BTN_defult"
                android:onClick="setClickEvent"
                android:text="5" />


            <Button
                android:id="@+id/btn_6"
                style="@style/BTN_defult"
                android:onClick="setClickEvent"
                android:text="6" />


            <Button
                android:id="@+id/btn_minus"
                style="@style/BTN_defult_right"
                android:onClick="operarionevent"
                android:text="-" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_1"
                style="@style/BTN_defult"
                android:onClick="setClickEvent"
                android:text="1" />


            <Button
                android:id="@+id/btn_2"
                style="@style/BTN_defult"
                android:onClick="setClickEvent"
                android:text="2" />


            <Button
                android:id="@+id/btn_3"
                style="@style/BTN_defult"
                android:onClick="setClickEvent"
                android:text="3" />


            <Button
                android:id="@+id/btn_plus"
                style="@style/BTN_defult_right"
                android:onClick="operarionevent"
                android:text="+" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_0"
                style="@style/BTN_defult"
                android:onClick="setClickEvent"
                android:text="0" />

            <Button
                android:id="@+id/btn_dot"
                style="@style/BTN_defult"
                android:onClick="setClickEvent"
                android:text="." />


            <Button
                android:id="@+id/btn_del"
                style="@style/BTN_defult"
                android:text="del" />


            <Button
                android:id="@+id/btn_equal"
                style="@style/BTN_defult_right_last"
                android:layout_height="match_parent"
                android:onClick="equalEvent"
                android:text="=" />

        </TableRow>


    </TableLayout>
</LinearLayout>